@page  "/dashboard/parcel/parcelhistory/{id?}"
@model LogisticInterface.Pages.Dashboard.Parcel.ParcelHistoryModel
@{
    ViewData["Title"] = "Parcel History";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card mb-4">
                <div class="card-header">History of @Model.Parcel.Name</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.History[0].Status)</th>
                                    <th>@Html.DisplayNameFor(model => model.History[0].Date)</th>
                                    <th>@Html.DisplayNameFor(model => model.History[0].Address)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.History)
                                {
                                    <tr>
                                        <td>@history.Status</td>
                                        <td>@history.Date</td>
                                        <td>@history.Address.Street, @history.Address.City, @history.Address.Country</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>