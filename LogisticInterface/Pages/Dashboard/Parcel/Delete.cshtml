@page "/dashboard/parcel/delete/{id?}"
@model LogisticInterface.Pages.Dashboard.Parcel.DeleteModel
@{
    ViewData["Title"] = "Delete Parcel";
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>Are you sure to delete: <strong>@Model.Parcel.Name</strong> </p>
            <a class="btn btn-primary" asp-page="./Index">Danh sách</a>
            <button type="submit" asp-page="./Delete" class="btn btn-danger">Xóa</button>
        </form>
    </div>
</div>
