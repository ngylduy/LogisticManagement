@page "/admin/user/assignrole/{userid?}"
@model AddRoleModel
@{
    ViewData["Title"] = "Set Role";
}

<h3>Set role for user: @Model.user.UserName</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">

                @Html.ListBoxFor(m => m.RoleNames, @Model.allRoles, new { id = "id-select-role", @class = "w-100" })

                <label asp-for="RoleNames" class="form-label"></label>
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-primary" asp-page="./Index">Users list</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <script>
        $('#id-select-role').multipleSelect({
              selectAll: false,
              keepOpen: false,
              isOpen: false
          });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
