@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="col-lg-12">
    <partial name="_StatusMessage" for="StatusMessage" />
    <!-- Change password card-->
    <div class="card mb-4">
        <div class="card-header">Change Password</div>
        <div class="card-body">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- Form Group (current password)-->
                <div class="mb-3">
                    <label asp-for="Input.OldPassword" class="small mb-1"></label>
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <!-- Form Group (new password)-->
                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="small mb-1"></label>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <!-- Form Group (confirm password)-->
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="small mb-1"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
