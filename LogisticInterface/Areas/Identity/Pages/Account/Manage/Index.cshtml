@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<div class="col-xl-4">
    <partial name="_StatusMessage" for="StatusMessage" />
    <!-- Profile picture card-->
    <div class="card mb-4 mb-xl-0">
        <div class="card-header">Profile Picture</div>
        <div class="card-body text-center">
            <!-- Profile picture image-->
            <img class="img-account-profile rounded-circle mb-2" src="https://vietbest.vn//components/com_community/assets/default-general-avatar.png?_=1707599655" alt="Avatar">
            <!-- Profile picture help block
            <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
            <!-- Profile picture upload button
            <button class="btn btn-primary" type="button">Upload new image</button>-->
        </div>
    </div>
</div>

<div class="col-xl-8">
    <!-- Account details card-->
    <div class="card mb-4">
        <div class="card-header">Account Details</div>
        <div class="card-body">
            <form id="profile-form" method="post">
                <!-- Form Group (username)-->
                <div class="mb-3">
                    <label class="small mb-1" asp-for="Username"></label>
                    <input class="form-control" asp-for="Username" disabled />
                </div>
                <!-- Form Row-->
                <div class="mb-3">
                    <label class="small mb-1" asp-for="Input.FullName"></label>
                    <input class="form-control" asp-for="Input.FullName">
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <!-- Form Row        -->
                <div class="row gx-3 mb-3">

                    <!-- Form Group (organization name)-->
                    <div class="col-md-6">
                        <label asp-for="Input.HouseNumber" class="small mb-1"></label>
                        <input class="form-control" asp-for="Input.HouseNumber">
                        <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                    </div>
                    <!-- Form Group (location)-->
                    <div class="col-md-6">
                        <label asp-for="Input.Address" class="small mb-1"></label>
                        <select asp-for="Input.Address" class="form-control" asp-items="ViewBag.AddressList"></select>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>
                <!-- Form Group (Phone number)-->
                <div class="mb-3">
                    <label class="small mb-1" asp-for="Input.PhoneNumber">Phone number</label>
                    <input class="form-control" placeholder="Enter your phone number" asp-for="Input.PhoneNumber">
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <!-- Save changes button-->
                <button class="btn btn-primary" type="submit">Save changes</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
